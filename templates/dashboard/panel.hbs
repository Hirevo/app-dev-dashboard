<!DOCTYPE html>
<html lang="en" class="has-navbar-fixed-top">
<head>
    {{> head}}
    <style>
        html, body {
            width: 100%;
            height: 100%;
        }
        .custom-tag {
            word-wrap: break-word;
            padding: 10px;
            border-radius: 5px;
            background-color: var(--info-color);
            color: #fff;
            font-weight: bold;
        }
        .custom-box {
            box-shadow: 0 3px 10px 1px #a7a7a7;
            border-radius: 1px;
            border: 1px solid grey;
            text-align: center;
            padding: 10px;
        }
    </style>
    <link rel="stylesheet" href="/static/panel.css">
</head>
<body>
    {{> navbar}}
    <div class="hero">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">Dashboard Panel</h1>
                <h3 class="subtitle">Here, you can manage all of your widgets.</h3>
            </div>
        </div>
    </div>
    {{#if message}}
        <widget-panel message="{{ message }}"></widget-panel>
    {{else}}
        <widget-panel></widget-panel>
    {{/if}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/web-animations/2.3.1/web-animations.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/hammer.js/2.0.8/hammer.min.js" defer></script>
    <script src="https://unpkg.com/muuri@0.6.3/dist/muuri.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js" defer></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.8.7/tiny-slider.css">
    <link rel="stylesheet" href="/static/tiny-slider/slider.css">
    <script type="module" src="/dist/components/widget-panel.js"></script>
</body>
</html>
